<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendor Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="../styles/dashboard.css" rel="stylesheet">
    <link href="../styles/table.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">   
</head>
<body class="flex min-h-screen bg-gray-100">
    {{> vendor_sidebar u currentPath=currentPath count=count}}
    <div class="flex-1 p-4 md:p-6 overflow-hidden">
        <header class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 md:mb-6">
            <h1 class="text-xl md:text-2xl lg:text-3xl font-semibold text-gray-800 mb-3 sm:mb-0">
                Vendor Profile
            </h1>
        </header>
        <section class="bg-white p-6 rounded-lg md:rounded-2xl shadow-md w-full mb-8">
            <div class="flex flex-col items-center space-y-4">
                <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center mb-4">
                    <i class="fas fa-user text-5xl text-gray-400"></i>
                </div>
                <div class="w-full">
                    <div class="mb-4">
                        <label class="block text-gray-600 text-sm font-medium mb-1">Full Name</label>
                        <div class="bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 text-gray-800">{{u.full_name}}</div>
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-600 text-sm font-medium mb-1">Email</label>
                        <div class="bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 text-gray-800">{{u.email}}</div>
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-600 text-sm font-medium mb-1">Role</label>
                        <div class="bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 text-gray-800 capitalize">{{u.role}}</div>
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-600 text-sm font-medium mb-1">Account Created</label>
                        <div class="bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 text-gray-800">{{formatDate u.created_at}}</div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Activity Logs Section -->
        <section class="bg-white p-6 rounded-lg md:rounded-2xl shadow-md w-full">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg md:text-xl font-semibold text-gray-800">Activity</h2>
                <div class="flex space-x-2">
                    <div class="relative">
                        <select id="actionTypeFilter" class="appearance-none bg-white border border-gray-300 rounded-lg px-4 py-2 pr-8 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="all">All Actions</option>
                            <option value="sale">Sales</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                    <div class="relative">
                        <input type="text" id="searchActivity" placeholder="Search..." class="bg-gray-50 border border-gray-300 rounded-lg px-4 py-2 pl-10 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Date
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Action Type
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Description
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200" id="activityTableBody">
                        {{#each l}}
                        <tr data-action-type="{{this.action_type}}">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{formatDate this.date}}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 capitalize">
                                {{replaceUnderscore this.action_type}}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">
                                {{this.description}}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    {{#eq this.status 'success'}}bg-green-100 text-green-800{{/eq}}
                                    {{#eq this.status 'fail'}}bg-red-100 text-red-800{{/eq}}
                                    {{#eq this.status 'pending'}}bg-yellow-100 text-yellow-800{{/eq}}">
                                    {{this.status}}
                                </span>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="mt-4 flex justify-between items-center">
                <div class="text-sm text-gray-500" id="tableInfo">Showing 0 to 0 of 0 entries</div>
                <div class="flex space-x-2">
                    <button id="prevPage" class="px-3 py-1 border rounded-lg bg-gray-100 text-gray-600 disabled:opacity-50">Previous</button>
                    <button id="nextPage" class="px-3 py-1 border rounded-lg bg-gray-100 text-gray-600 disabled:opacity-50">Next</button>
                </div>
            </div>
        </section>
    </div>

    <script src='../scripts/activity_page.js'></script>
</body>
</html>