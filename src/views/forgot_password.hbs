<!DOCTYPE html>
<html lang="en">
<head>
    <title>Forgot Password</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/login.css">
</head>
<body>
<div id="content">
    <div id="logo"><img src="/assets/Simply_Beauty_Ph_header_360x.png"></div>
    {{!-- {{#if questions}}
        {{#unless email}}
            <script>window.location.href = '/login';</script>
        {{/unless}}
    {{/if}} --}}

    <form id="forgot-form" action="/forgot-password" method="POST">
        {{#if error}}
            <div class="error-message">{{error}}</div>
        {{/if}}

        {{#if success}}
            <div class="success-message">{{success}}</div>
        {{/if}}

        {{#unless questions}}
        <label for="email">Enter your registered email:</label>
        <input type="email" id="email" name="email" required>
        <button type="submit" id="submit">Continue</button>
        {{/unless}}

        {{#if questions}}
            <input type="hidden" name="email" value="{{email}}">

            {{#each questions}}
                <div class="security-question">
                    <label>{{this.question}}</label>
                    <input type="text" name="answers[]" required>
                </div>
            {{/each}}

            <button type="submit" formaction="/verify-security" id="submit">Verify Answers</button>
        {{/if}}
    </form>
</div>
</body>
</html>
